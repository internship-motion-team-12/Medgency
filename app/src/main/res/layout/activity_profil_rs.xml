<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.medgency.activity.ProfilRS">

    <android.support.v7.widget.Toolbar
        android:id="@+id/ToolbarProfilRS"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:paddingRight="17dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/TVToolbar"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textSize="18sp"
            tools:text="RS Siloam Salampari"
            android:gravity="center"
            android:textColor="@color/Black100"/>
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ToolbarProfilRS"
        android:fillViewport="true">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/IVRS"
                android:layout_width="match_parent"
                android:layout_height="202dp"
                app:layout_constraintTop_toTopOf="parent"
                tools:background="@color/Black10"
                tools:layout_editor_absoluteX="0dp" />
            
            <ImageView
                android:id="@+id/IVToGoogleMaps"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="184dp"
                android:src="@drawable/btn_location"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/TVNamaRS"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:layout_marginStart="17dp"
                android:layout_marginTop="20dp"
                android:text="Nama RS"
                android:textColor="@color/Black100"
                android:textSize="21sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/IVRS"/>

            <LinearLayout
                android:id="@+id/LL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/TVNamaRS">

                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="10dp"
                    android:layout_marginStart="19.5dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/ic_location" />

                <RelativeLayout
                    android:id="@+id/RL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10.5dp"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/TVAlamatRS"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineHeight="16dp"
                        android:text="Jl. Wringin Ireng No. 35 Ds. Pesarean Kec. Adiwerna Kab. Tegal Jawa Tengah Indonesia"
                        android:textAlignment="textStart"
                        android:textColor="@color/Black80"
                        android:textSize="12sp"
                        android:layout_marginRight="17dp"/>
                </RelativeLayout>
            </LinearLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="92.15dp"
                android:layout_marginTop="24dp"
                android:layout_marginStart="17dp"
                android:layout_marginEnd="17dp"
                android:background="@color/Blue50"
                app:layout_constraintTop_toBottomOf="@+id/LL"/>

            <com.androidkun.xtablayout.XTabLayout
                android:id="@+id/xTabLayout"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                app:layout_constraintTop_toBottomOf="@+id/view"
                android:layout_marginTop="16.85dp"
                android:background="@color/Black10"/>

            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toBottomOf="@id/xTabLayout" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>



</android.support.constraint.ConstraintLayout>